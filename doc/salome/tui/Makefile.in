top_srcdir=@top_srcdir@
top_builddir=../../..
root_srcdir=@ROOT_SRCDIR@
srcdir=@srcdir@
VPATH=.:@srcdir@
doxygen=@DOXYGEN@

@COMMENCE@

docs:
	cp -fr $(srcdir)/PYCALCULATOR ./INPUT; \
	cp -fr ./PYCALCULATOR/doxyfile ./INPUT; \
	cp -fr ./PYCALCULATOR/sources/static/tree.js ./INPUT/sources/static; \
	cd INPUT; \
	sed 's|../../../share/salome|$(root_srcdir)|' ./doxyfile > ./doxyfile1; \
	mv -f doxyfile1 doxyfile; \
	$(doxygen) ./doxyfile; \
	cd ..; \
	cp -fr $(srcdir)/PYCALCULATOR/sources/static/*.* ./PYCALCULATOR/
	cp -fr $(srcdir)/PYCALCULATOR/sources/ PYCALCULATOR/
	rm -fr INPUT

clean:
	rm -fr PYCALCULATOR

distclean: clean
	rm -fr INPUT

install:
	$(INSTALL) -d $(docdir); \
	mkdir -p $(docdir)/tui
	cp -fr PYCALCULATOR $(docdir)/tui

uninstall:
	rm -fr $(docdir)/tui/PYCALCULATOR
